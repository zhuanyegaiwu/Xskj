<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/icon_sq">

        </ImageView>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/color_FFFFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transfer Liquid"
                android:textSize="20sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:textColor="@color/color_FFFFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chamber 1 becomes saturated more quickly.Transfering from 2 to 1 helps conserve liquid."
                android:textSize="20sp">

            </TextView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_ffff9800_36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_margin="10dp"
            android:src="@mipmap/icon_jz"
            android:layout_width="60dp"
            android:layout_height="60dp">

        </ImageView>

        <LinearLayout

            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Transfer is about to start."
                android:textColor="@color/color_FFFFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:text="Make sure destination chamber is fully drained and cleaned."
                android:textColor="@color/color_FFFFFFFF"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCancel"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/bg_00bfbb_22dp"
            android:paddingVertical="20dp"
            android:textColor="@color/color_FFFFFFFF"
            android:text="Cancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:id="@+id/tvStart"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/bg_00bfbb_22dp"
            android:paddingVertical="20dp"
            android:textColor="@color/color_FFFFFFFF"
            android:text="Start"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>
</RelativeLayout>