<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CommFt">


    <RelativeLayout
        android:id="@+id/rlTtile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:visibility="invisible"
            android:layout_alignParentLeft="true"
            android:layout_marginVertical="6dp"
            android:layout_marginLeft="28dp"
            android:id="@+id/ivLeft"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_back">
        </ImageView>


        <TextView
            style="@style/TextCommStyleBlackBig"
            android:id="@+id/tvCentre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

        </TextView>


        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/llIcon"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="532dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivBasket"
                android:src="@mipmap/icon_basket_unselect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>

            <TextView
                android:id="@+id/tvBasket"
                style="@style/TextTitleStyleLight"
                android:layout_marginLeft="8dp"
                android:text="Basket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <ImageView
                android:id="@+id/ivPlatform"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/icon_platform_unselect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>

            <TextView
                android:id="@+id/tvPlatform"
                style="@style/TextTitleStyleLight"
                android:layout_marginLeft="8dp"
                android:text="Platform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
        <ImageView
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            android:layout_marginVertical="6dp"
            android:layout_marginRight="28dp"
            android:id="@+id/ivRight"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_setting">

        </ImageView>
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/llContent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </LinearLayout>
</LinearLayout>