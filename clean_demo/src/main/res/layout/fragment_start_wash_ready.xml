<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivOk"
        android:layout_marginLeft="253dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/icon_ok"
        android:layout_width="52.5dp"
        android:layout_height="52.5dp">

    </ImageView>



    <TextView
        android:id="@+id/textView1"
        android:layout_marginLeft="127dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/ivOk"
        android:gravity="center"
        android:text="Your washer is ready to go."
        style="@style/TextCommStyleBlack"
        android:layout_width="308dp"
        android:layout_height="wrap_content">

    </TextView>


    <TextView
        android:id="@+id/tvStartWash"
        android:layout_marginLeft="179dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="138dp"
        app:layout_constraintTop_toBottomOf="@id/ivOk"
        android:background="@color/color_000000"
        android:text="Start Wash"
        android:gravity="center"
        style="@style/TextCommStyleWhite"
        android:layout_width="200dp"
        android:layout_height="48dp">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>