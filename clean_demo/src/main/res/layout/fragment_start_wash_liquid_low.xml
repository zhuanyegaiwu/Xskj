<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_marginLeft="240dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/imageView4"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:src="@mipmap/icon_danger"/>

    <TextView
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@id/imageView4"
        android:layout_marginLeft="135dp"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/TextCommStyleBlack"
        android:gravity="center"
        android:id="@+id/textView20"
        android:layout_width="282dp"
        android:layout_height="38dp"
        android:text="The wash canâ€™t start since there is not enough liquid."
        />

    <TextView
        android:id="@+id/tvRefill"
        android:text="Refill wash liquid"
        android:layout_marginLeft="41dp"
        app:layout_constraintStart_toStartOf="@id/textView20"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/textView20"
        android:background="@color/color_000000"
        style="@style/TextCommStyleWhite"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="48dp">

    </TextView>

    <TextView
        android:text="Start Wash"
        app:layout_constraintStart_toStartOf="@id/tvRefill"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvRefill"
        android:background="@color/color_C4C4C4"
        style="@style/TextCommStyleWhite"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="48dp">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>