<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/TextCommStyleBlack"
        android:id="@+id/textView5"
        android:layout_width="597dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="You can either activate your washer by scanning the QR code in your SprintRay app."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivQR"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView7"
        style="@style/TextCommStyleBlack"
        android:layout_width="597dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="You can also enter the activation code on SprintRay website to connect the device: sprintray.com/activate."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivQR" />

    <TextView
        android:letterSpacing="0.3"
        style="@style/TextCommStyleBlack"
        android:background="@drawable/bg_f1f1f1_0dp"
        android:gravity="center"
        android:id="@+id/textView10"
        android:layout_width="144dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:text="212469"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:gravity="center"
        android:background="@drawable/bg_000000_0dp"
        android:layout_marginTop="19dp"
        style="@style/TextCommStyleBlack"
        android:layout_marginLeft="152dp"
        android:id="@+id/textView15"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:text="Skip"
        app:layout_constraintTop_toBottomOf="@id/textView10"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:gravity="center"
        android:background="@color/color_000000"
        android:layout_marginTop="19dp"
        style="@style/TextCommStyleWhite"
        android:layout_marginLeft="85dp"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:text="Login Manualy"
        app:layout_constraintTop_toBottomOf="@id/textView10"
        app:layout_constraintStart_toEndOf="@id/textView15" />
</androidx.constraintlayout.widget.ConstraintLayout>